function do_upgrades takes nothing returns nothing
	if c_ghoul_done >= WG then
		call SetBuildUpgr( 1, UPG_CANNIBALIZE )
	endif
    if c_halls_done >= 1 and c_fiend_done >= 1 then
		call SetBuildUpgr( 1, UPG_FIEND_WEB )
        call SetBuildUpgr( 1, UPG_BURROWING )
    endif
    if c_citadel_done >= 1 then
		if c_crypt_done >= 1 then
			if c_ghoul_done > WG then
				call SetBuildUpgr( 1, UPG_GHOUL_FRENZY )
			endif
			if c_garg_done >= 1 then
				call SetBuildUpgr( 1, UPG_STONE_FORM   )
			endif
        endif
		if c_slaughter_done >= 1 and c_abom_done >= 1 then
			call SetBuildUpgr( 1, UPG_PLAGUE       )
		endif
    endif
    if c_boneyard_done >= 1 and c_wyrm_done >= 1 then
        call SetBuildUpgr( 1, UPG_WYRM_BREATH )
    endif
    if c_temple_done >= 1 then
        if c_necro_done >= 1 then
            call SetBuildUpgr( 1, UPG_NECROS )
            call SetBuildUpgr( 1, UPG_SKEL_LIFE )
            if c_citadel_done >= 1 then
                call SetBuildUpgr( 2, UPG_NECROS        )
                call SetBuildUpgr( 2, UPG_SKEL_MASTERY  )
            endif
        endif
        if c_banshee_done >= 1 then
            call SetBuildUpgr( 1, UPG_BANSHEE )
            if c_citadel_done >= 1 then
                call SetBuildUpgr( 2, UPG_BANSHEE )
            endif
        endif
    endif
    if c_grave_done >= 1 and c_gold > 300 then
        call SetBuildUpgr( 1, UPG_CR_ATTACK     )
        call SetBuildUpgr( 1, UPG_CR_ARMOR      )
        call SetBuildUpgr( 1, UPG_UNHOLY_STR    )
        call SetBuildUpgr( 1, UPG_UNHOLY_ARMOR  )
        if c_halls_done >= 1 then
            call SetBuildUpgr( 2, UPG_CR_ATTACK     )
            call SetBuildUpgr( 2, UPG_CR_ARMOR      )
            call SetBuildUpgr( 2, UPG_UNHOLY_STR    )
            call SetBuildUpgr( 2, UPG_UNHOLY_ARMOR  )
            if c_citadel_done >= 1 then
                call SetBuildUpgr( 3, UPG_CR_ATTACK     )
                call SetBuildUpgr( 3, UPG_CR_ARMOR      )
                call SetBuildUpgr( 3, UPG_UNHOLY_STR    )
                call SetBuildUpgr( 3, UPG_UNHOLY_ARMOR  )
            endif
        endif
    endif
endfunction
function build_sequence takes nothing returns nothing
    local integer worker
	local integer rnd = GetRandomInt(1,3)
    call InitBuildArray()
	set worker = c_mines * 5 + 1
	if worker < 1 then
		set worker = 1
	endif
	if c_food_used <= 95 and c_acolyte == c_acolyte_done and c_acolyte_done < worker and c_neclis == c_neclis_done then
		call SetBuildUnit( c_acolyte_done+1, ACOLYTE )
	endif
	if c_food_used + 5 >= c_food_made and c_food_made < 100 then
		call SetBuildUnit( c_zig_done+1, ZIGGURAT_1 )
	endif
	if c_neclis_done < 1 and c_acolyte_done > 0 then
		call SetBuildUnit( 1, NECROPOLIS_1 )
	endif
	if c_altar_done < 1 then
		call SetBuildUnit( 1, UNDEAD_ALTAR )
	elseif c_food_used <= 95 and c_hero1 == c_hero1_done and c_hero2 == c_hero2_done and c_hero3 == c_hero3_done then
		if b_hero1_done then
			if b_hero2_done then
				if b_hero3_done or c_citadel_done > 0 then
					call SetBuildUnit( 1, hero_id3 )
				endif
			elseif c_halls_done > 0 then
				call SetBuildUnit( 1, hero_id2 )
			endif
		else
			call SetBuildUnit( 1, hero_id )
		endif
	endif
	if c_crypt_done < 1 then
		call SetBuildUnit( 1, CRYPT )
	elseif c_food_used <= 95 and c_ghoul == c_ghoul_done and c_garg == c_garg_done and c_fiend == c_fiend_done then
		if c_ghoul_done < WG or ((c_slaughter_done < 1 or c_citadel_done < 1) and rnd == 1 and c_ghoul_done < WG+6) then
			call SetBuildUnit( c_ghoul_done+1, GHOUL ) 
		elseif c_halls_done > 0 and c_grave_done > 0 and rnd == 2 and c_garg_done < 4 then
			call SetBuildUnit( c_garg_done+1, GARGOYLE ) 
		elseif c_grave_done > 0 and c_fiend_done < 4 then
			call SetBuildUnit( c_fiend_done+1, CRYPT_FIEND ) 
		endif
	endif
	if c_tomb_done < 1 then
		call SetBuildUnit( 1, TOMB_OF_RELICS )
	endif
	if c_grave_done < 1 then
		call SetBuildUnit( 1, GRAVEYARD )
	endif
	if c_neclis_done > 0 and c_halls < 1 and worker <= c_acolyte_done then
		call SetBuildUnit( 1, NECROPOLIS_2 )
	endif
	call BasicExpansion( c_mines < 2 and c_fiend_done >= 3, UNDEAD_MINE )
	if c_mines > 1 and c_gold > 300 then
		if GetUnitCountEx(UNDEAD_MINE,true,1) > 0 and TownCount(NECROPOLIS_1) < 1 then
			call SecondaryTown( 1, 2, ZIGGURAT_1 )
			if GetUnitCountEx(ZIGGURAT_1,true,1) > 1 then
				call SecondaryTown( 1, 2, ZIGGURAT_2 )
			endif
		endif
		if GetUnitCountEx(UNDEAD_MINE,true,2) > 0 and TownCount(NECROPOLIS_1) < 1 then
			call SecondaryTown( 2, 2, ZIGGURAT_1 )
			if GetUnitCountEx(ZIGGURAT_1,true,2) > 1 then
				call SecondaryTown( 2, 2, ZIGGURAT_2 )
			endif
		endif
		if GetUnitCountEx(UNDEAD_MINE,true,3) > 0 and TownCount(NECROPOLIS_1) < 1 then
			call SecondaryTown( 3, 2, ZIGGURAT_1 )
			if GetUnitCountEx(ZIGGURAT_1,true,3) > 1 then
				call SecondaryTown( 3, 2, ZIGGURAT_2 )
			endif
		endif
	elseif c_mines < 1 and c_gold < 800 then
		return
	endif
	call do_upgrades()
	if c_halls_done > 0 and c_citadel < 1 and worker <= c_acolyte_done and c_necro + c_banshee + c_abom + c_statue > 5 then
		call SetBuildUnit( 1, NECROPOLIS_3 )
	endif
	if c_temple_done < 1 then
		call SetBuildUnit( 1, DAMNED_TEMPLE )
	elseif c_food_used <= 95 and c_necro == c_necro_done and c_banshee == c_banshee_done then
		if rnd == 1 and c_necro_done < 4 then
			call SetBuildUnit( c_necro_done+1, NECRO ) 
		elseif c_banshee_done < 3 then
			call SetBuildUnit( c_banshee_done+1, BANSHEE ) 
		endif
	endif
	if c_slaughter_done < 1 then
		call SetBuildUnit( 1, SLAUGHTERHOUSE )
	elseif c_food_used <= 95 and c_abom == c_abom_done and c_statue == c_statue_done then
		if c_citadel_done > 0 and rnd == 1 and c_abom_done < 4 then
			call SetBuildUnit( c_abom_done+1, ABOMINATION ) 
		elseif c_statue_done < 2 then
			call SetBuildUnit( c_statue_done+1, OBS_STATUE ) 
		endif
	endif
	if c_boneyard_done < 1 then
		if c_pit_done < 1 then
			if c_halls_done > 0 then
				call SetBuildUnit( 1, SAC_PIT )
			endif
		elseif c_citadel_done > 0 then
			call SetBuildUnit( 1, BONEYARD )
		endif
	elseif c_food_used <= 93 and c_wyrm == c_wyrm_done and c_wyrm_done < 2 then
		call SetBuildUnit( c_wyrm_done+1, FROST_WYRM ) 
	endif
	if c_food_used <= 95 and c_zep < 1 then
		call GetZeppelin()
	endif
endfunction
function harvest_gold takes integer townid returns nothing
    if TownHasMine(townid) and GetUnitCountEx(UNDEAD_MINE,true,townid) > 0 then
        call HarvestGold(townid,5)
    endif
endfunction
function peon_assignment takes nothing returns nothing
    loop
        call ClearHarvestAI()
        call harvest_gold(0)
        call harvest_gold(1)
        call harvest_gold(2)
        call harvest_gold(3)
        call HarvestWood(0,WG)
        call build_sequence()
        call Sleep(1)
    endloop
endfunction
function main takes nothing returns nothing
set trace_on = GetAiPlayer()==1
    call PickMeleeHero(RACE_UNDEAD)
    call set_skills()
    call StandardAI(function SkillArrays, function peon_assignment, function attack_sequence)
    call StartThread(function set_vars)
    call PlayGame()
endfunction